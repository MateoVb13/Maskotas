<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimalAPP.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="30" VerticalOptions="Center" Spacing="15">
            <Label Text="Iniciar Sesión" FontSize="28" HorizontalOptions="Center" FontAttributes="Bold"/>

            <!-- Entrada de Correo Electrónico -->
            <Entry Placeholder="Correo Electrónico" x:Name="EmailEntry" Keyboard="Email"/>

            <!-- Entrada de Contraseña -->
            <Entry Placeholder="Contraseña" x:Name="PasswordEntry" IsPassword="True"/>

            <!-- Botón de Login -->
            <Button Text="Ingresar" BackgroundColor="DarkGreen" TextColor="White" CornerRadius="20" Clicked="OnLoginClicked"/>

            <!-- Navegación al Registro -->
            <StackLayout HorizontalOptions="Center">
                <Label Text="¿No tienes una cuenta?" FontSize="14" HorizontalOptions="Center"/>
                <Button Text="Regístrate" Clicked="OnRegisterClicked" FontSize="14"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>